{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed to "node" for better compatibility with modern Next.js apps
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src", // Ensure your imports are relative to the src directory
    "paths": {
      "@/*": ["*"] // Simplifies aliasing
    },
    "target": "ES2020" // Changed to ES2020 for async/await improvements
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
, "src/othercomponents/GoogleButton.js", "src/othercomponents/GoogleButton.js", "src/types/next-auth.d.ts"  ],
  "exclude": ["node_modules", ".next", "dist"]
}
